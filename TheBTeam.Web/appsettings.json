{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Server=(localdb)\\MSSQLLocalDB;Database=TheBTeam;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "ReportsApiUrl": "https://localhost:5001/api/",

  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "outputTemplate": "{Timestamp:HH:mm:ss} {Level:u5}] {Message:lj} {Properties:j}{NewLine}{Exception}",
        "restrictedToMinimumLevel": "Information"
      },
      {
        "Name": "File",
        "Args": { "path": "./SourceFiles/logs.log" },
        "outputTemplate": "{Timestamp:HH:mm:ss} {Level:u5}] {Message:lj} {Properties:j}{NewLine}{Exception}",
        "restrictedToMinimumLevel": "Information"
      }
    ]
  }
}
