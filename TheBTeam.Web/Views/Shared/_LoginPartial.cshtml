@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li>
            <a class="nav-link text-dark border border-warning rounded" asp-area="" asp-controller="account" asp-action="LogOut">
                <i class="bi bi-person me-2"></i>
                Logout
            </a>
        </li>
    }
    else
    {
        <li>
            <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="account" asp-action="Register">
                <i class="bi bi-person-circle me-2"></i>
                Register
            </a>
        </li>
        <li>
            <a class="nav-link text-dark border border-success rounded" asp-area="" asp-controller="account" asp-action="Login">
                <i class="bi bi-person me-2"></i>
                Login
            </a>
        </li>
    }
</ul>