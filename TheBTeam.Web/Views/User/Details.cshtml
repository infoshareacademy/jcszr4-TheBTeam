@model TheBTeam.BLL.Models.UserDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="IsActive"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsActive
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Balance"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Balance.ToString("C")
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Currency"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Currency
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Age"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Gender"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Company"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Company
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Email"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Phone"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Registered"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Registered.Date
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
