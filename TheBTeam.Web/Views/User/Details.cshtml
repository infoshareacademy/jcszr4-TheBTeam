            <dd class="col-sm-10">
                @Model.Company
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Email"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Phone"></label>
